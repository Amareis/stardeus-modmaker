{
    "compilerOptions": {
        "experimentalDecorators": true,
        "baseUrl": ".", // This must be specified if "paths" is.
        "paths": {
            "/*": [
                "src/*"
            ]
        },
        "moduleResolution": "Node",
        "module": "es6",
        "target": "esnext",
        "sourceMap": true,
        "noEmit": true,
        "strict": true,
        "jsx": "preserve",
        "noImplicitAny": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}